generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id
  name           String
  email          String
  profilePicture String
  textbooks      Textbook[]
}

model Textbook {
  id      String  @id @default(cuid())
  name    String
  fileURL String
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
}
